<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UrenProjectQien</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/Dashboard.css" />
</head>
<body>
    <nav class="navbar topbar navbar-1 white">
        <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><img src="~/Images/QienLogo.png" height="100" /></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent15"
                aria-controls="navbarSupportedContent15" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent15">

            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" style="color:white" asp-area="" asp-controller="Admin" asp-action="Dashboard">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color:white" asp-area="" asp-controller="Admin" asp-action="AccountOverzicht">Accountbeheer</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color:white" asp-area="" asp-controller="Client" asp-action="GetAllClients">Werkgevers</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" style="color:white" asp-area="" asp-controller="Admin" asp-action="YearOverview">Jaaroverzicht</a>
                </li>                
                <li class="nav-item">
                    @*<a class="nav-link" style="color:white" asp-area="" asp-controller="Home" asp-action="Privacy">Uitloggen</a>*@
                    <partial name="_LoginPartial" />
                </li>
            </ul>
        </div>
    </nav>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2019 - UrenProjectQien - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
