@model QienUrenMVC.Models.EmployeeUpdateAccountModel
@{
    ViewData["Title"] = "Medewerker Personalia";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<div class="row">
    <div class="col-md-11">
        <form method="post" enctype="multipart/form-data" asp-action="EmployeePersonalia">
            @Html.HiddenFor(m => m.IsActive)
            @Html.HiddenFor(m => m.IsAdmin)
            @Html.HiddenFor(m => m.IsQienEmployee)
            @Html.HiddenFor(m => m.IsTrainee)
            @Html.HiddenFor(m => m.HashedPassword)
            @Html.HiddenFor(m => m.ImageProfileString)
            @Html.HiddenFor(m => m.ProfileImage)
            @Html.HiddenFor(m => m.IsChanged)
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="kaartheader">
                <h3>Account Info</h3>
            </div>
            <div class="kaartinhoud">
                <div class="row">
                    <div style="text-align:center" class="col-md-6 offset-md-3">
                        <div>
                            <img asp-append-version="true" style="border: 3px solid #9A33F8; width:360px; height:360px; border-radius:50%;" class="img-fluid" src="~/Images/ProfileImages/@Model.ImageProfileString" alt="Profielfoto" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="form-group row">
                    <div class="col-md-4 offset-md-4">
                        <div class="custom-file">
                            <input asp-for="ProfileImage" class="form-control custom-file-input" />

                            <label class="custom-file-label">Upload Nieuwe Profielfoto</label>
                        </div>
                    </div>
                </div>



                <div class="row" style="margin-top:50px;">
                    <div class="col">
                        <div class="form-group">
                            @Html.HiddenFor(model => model.AccountId)
                            @Html.HiddenFor(model => model.FirstName)
                            @Html.DisplayNameFor(model => model.FirstName)
                            <h4>
                                @Html.DisplayFor(model => model.FirstName)
                            </h4>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            @Html.HiddenFor(model => model.LastName)
                            @Html.DisplayNameFor(model => model.LastName)
                            <h4>
                                @Html.DisplayFor(model => model.LastName)
                            </h4>
                        </div>

                    </div>
                </div>

                <div class="row">
                    <div class="col-md-7">
                        <div class="form-group">
                            @Html.HiddenFor(model => model.Email)
                            @Html.DisplayNameFor(model => model.Email)
                            <h4>
                                @Html.DisplayFor(model => model.Email)
                            </h4>
                            <br />
                            @Html.ActionLink("Wachtwoord wijzigen", "ChangePassword", new { }, new { @class = "link" })


                        </div>
                    </div>
                </div>
            </div>

            <div style="margin-top:50px;"></div>

            <div class="kaartheader">
                <h3>Persoonlijke Info</h3>
            </div>
            <div class="kaartinhoud">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="DateOfBirth" class="control-label"></label>
                            <input asp-for="DateOfBirth" class="form-control" />
                            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="MobilePhone" class="control-label"></label>
                            <input asp-for="MobilePhone" class="form-control" />
                            <span asp-validation-for="MobilePhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-7">
                        <div class="form-group">
                            @Html.DisplayNameFor(model => model.IBAN)
                            @Html.HiddenFor(model => model.IBAN)
                        </div>
                        <div class="form-group">
                            <h>
                                @Html.DisplayFor(model => model.IBAN)
                                @Html.HiddenFor(model => model.IBAN)
                            </h>
                        </div>
                    </div>
                </div>
            </div>

            <div style="margin-top:50px;"></div>

            <div class="kaartheader">
                <h3>Adresgegevens</h3>
            </div>
            <div class="kaartinhoud">
                <div class="row">
                    <div class="col-md-7">
                        <div class="form-group">
                            <label asp-for="Address" class="control-label"></label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="ZIP" class="control-label"></label>
                            <input asp-for="ZIP" class="form-control" />
                            <span asp-validation-for="ZIP" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="City" class="control-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            @section Scripts{
                <script>
                    $(document).ready(function () {
                        $('.custom-file-input').on("change", function () {
                            //console.log($(this).val());
                            var filename = $(this).val().split("\\").pop();
                            $(this).next('.custom-file-label').html(filename);
                        });
                    });
                </script>
            }

            <br />
            <div style="text-align:center" class="form-group">
                <input type="submit" value="Opslaan" class="btn btn-login" />
            </div>
        </form>
        </div>
        </div>

